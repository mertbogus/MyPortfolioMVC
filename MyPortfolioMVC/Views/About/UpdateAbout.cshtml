@model MyPortfolioMVC.Models.TblAbout
@{
    ViewBag.Title = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<h2>Güncelleme Sayfası</h2>
<br />
<form method="post" enctype="multipart/form-data">
    @Html.HiddenFor(x => x.AboutId)
    <label>Başlık</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
    <br />
    <label>Resim Yükleyin</label>
    <br />
    <input type="file" name="ImageFile" style="margin-bottom:7px; margin-top:7px"  />
    <br />
    <label>CV Yükleyin</label>
    <br />
    <input type="file" name="CVFile" style="margin-bottom:7px; margin-top:7px" />
    <br />
    <button class="btn btn-outline-success mt-1">Hakkımda Kısmını Güncelle</button>
</form>

