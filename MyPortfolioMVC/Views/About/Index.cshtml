@model List<MyPortfolioMVC.Models.TblAbout>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<h2>Hakkımda</h2>
<br />
<table class="table table-bordered">
       <thead>
    <tr>
        <td>Başlık</td>
        <td>Açıklama</td>
        <td>Görsel URL</td>
        <td>CV URL</td>
        <td>Sil</td>
        <td>Güncelle</td>
    </tr>
        </thead>
       <tbody>
           @foreach (var item in Model)
           {
               <tr>
                   <td>@item.Title</td>
                   <td>@item.Description</td>
                   <td><img src="@item.ImageUrl" style="height:100px; width:100px;"></td>
                   <td>@item.CvUrl</td>
                   <td><a href="/About/DeleteAbout/@item.AboutId" class="btn btn-outline-danger"> Sil</a></td>
                   <td><a href="/About/UpdateAbout/@item.AboutId" class="btn btn-outline-info"> Güncelle</a></td>
               </tr>
           }
       </tbody>
</table>
<br />
<a href="/About/CreateAbout" class="btn btn-success"> Yeni Hakkımda Bilgisi Ekle</a>

