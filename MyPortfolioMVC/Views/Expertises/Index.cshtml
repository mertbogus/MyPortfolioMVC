@model List<MyPortfolioMVC.Models.TblExpertis>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<h2>Uzmanlık Ekleme Sayfası</h2>

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    <br/>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.Title</td>
            <td><a href="/Expertises/DeleteExpertises/@item.ExpertiseId" class="btn btn-outline-danger"> Sil</a></td>
            <td><a href="/Expertises/UpdateExpertises/@item.ExpertiseId" class="btn btn-outline-info"> Güncelle</a></td>
        </tr>
    }
</table>
<br />
<a href="/Expertises/CreateExpertises" class="btn btn-outline-success">Yeni Uzmanlık Ekle</a>
