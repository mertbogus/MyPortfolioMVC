@model List<MyPortfolioMVC.Models.TblBanner>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<h2>Banner Listesi</h2>

<table class="table table-bordered">
<thead>
    <tr>
        <td>#</td>
        <td>Başlık</td>
        <td>Açıklama</td>
        <td>Sil</td>
        <td>Güncelle</td>
        <td>Anasayfa Göster</td>
        <td>Anasayfa da Gösterme</td>
    </tr>
</thead>
<tbody>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><a href="/Banner/DeleteBanner/@item.BannerId" class="btn btn-outline-danger"> Sil</a></td>
            <td><a href="/Banner/UpdateBanner/@item.BannerId" class="btn btn-outline-info"> Güncelle</a></td>
            <td><a href="/Banner/ShownBanner/@item.BannerId" class="btn btn-outline-warning"> Anasayfa da Göster</a></td>
            <td><a href="/Banner/NoShownBanner/@item.BannerId" class="btn btn-outline-warning"> Anasayfa da Gösterme</a></td>
        </tr>
    }
</tbody>
</table>
<br />
<a href="/Banner/CreateBanner" class="btn btn-success"> Yeni Banner Ekle</a>