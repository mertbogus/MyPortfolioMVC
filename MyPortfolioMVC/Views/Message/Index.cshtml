@model List<MyPortfolioMVC.Models.TblMessage>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<h2>Gelen Mesajlar</h2>

<br />

<table class="table table-bordered table-active">
    <thead>
        <tr>
            <th>#</th>
            <th>Gönderen Ad Soyad</th>
            <th>Email</th>
            <th>Konu</th>
            <th>Tarih</th>
            <th>Sil</th>
            <th>Mesajı Aç</th>
        </tr>
    </thead>

    <tbody>


        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.Subject</td>
                <td>@item.Date</td>
                <td><a href="/Message/DeleteMessage/@item.MessageId" class="btn btn-outline-danger">Sil</a> </td>
                <td>
                    <a href="/Message/MessageDetail/@item.MessageId" class="btn btn-outline-info">
                        Mesajı Aç
                    </a>
                </td>
            </tr>

        }

    </tbody>



</table>
<a href="/Message/MakeMessageRead/" class="btn btn-outline-success">Okunan Mesajlar</a>
