@model List<MyPortfolioMVC.Models.TblTestimonial> 
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Pozisyonu</th>
        <th>Resim</th>
        <th>Yorum</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
       <tr>
            <th>@count</th>
            <td>@item.NameSurname</td>
            <td><img src="@item.ImageUrl" style="height:100px; width=100px;"></td>
            <td>@item.Comments</td>
            <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-outline-info">Güncelle</a></td>

        </tr>
    }
</table>
<br />
<a href="/Testimonial/CreateTestimonial" class="btn btn-outline-success">Yeni Referans Ekle</a>

