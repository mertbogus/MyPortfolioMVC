@model  MyPortfolioMVC.Models.TblEducation
 
@{
    ViewBag.Title = "CreateEducation";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<h2>Eğitim Ekleme Sayfası</h2>

<form method="post">
    <label>Okul Adı</label>
    @Html.TextBoxFor(x => x.SchoolName, new { @class = "form-control" })
    <br />
    <label>Bölüm Adı</label>
    @Html.TextBoxFor(x => x.Department, new { @class = "form-control" })
    <br />
    <label>Açıklama</label>
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <br />
    <label>Başlama Tarihi</label>
    <input type="date" name="StartDate" class="form-control" />
    <br />
    <label>Bitiş Tarihi <span><strong>(Devam Ediyorsa Boş Bırakın)</strong></span></label>
    <input type="date" name="EndDate" class="form-control" />
    <br />
    <label>Derece <span><strong>(önlisanS,Lisans, Yüksek Lisans)</strong></span></label>
    <select name="Degree" class="form-control">
        <option disabled>Seçiminizi Yapın</option>
        <option value="Önlisans" @(Model.Degree=="Önlisans"? "selected" : "" )>Önlisans</option>
        <option value="lisans" @(Model.Degree=="lisans"? "selected" : "" )>Lisans</option>
        <option value="YüksekLisans" @(Model.Degree=="YüksekLisans"? "selected" : "" )>YüksekLisans</option>
    </select>
    <br />
    <button class="btn btn-outline-primary">Kaydet</button>
</form>